<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Chick" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
<!--        <item name="colorPrimary">@color/purple_500</item>-->
        <item name="colorPrimary">@color/chick</item>
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorPrimaryVariant">@color/chick</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSurface">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/caviar_dreams</item>
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>

    </style>

    <style name="Chick" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!-- Primary dark brand color for the status bar. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <!-- Secondary brand color. -->
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Colors for different parts of the UI -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="android:fontFamily">@font/caviar_dreams</item>
        <!-- Customize your theme here. -->
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- TextView theme -->
    <style name="Chick.TextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <!-- EditText theme -->
    <style name="Chick.EditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <!-- Button theme -->
    <style name="Chick.Button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>

    <!-- RadioButton theme -->
    <style name="Chick.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonTint">@color/colorPrimary</item>
    </style>

    <!-- CheckBox theme -->
    <style name="Chick.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/colorPrimary</item>
    </style>
</resources>