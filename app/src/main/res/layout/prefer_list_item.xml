<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Chick">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pf_name"
            style="@style/Chick.TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prefer"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/pf_like"
            app:layout_constraintStart_toEndOf="@+id/pf_like"
            app:layout_constraintTop_toTopOf="@+id/pf_like" />

        <CheckBox
            android:id="@+id/pf_like"
            style="@style/Chick.CheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>